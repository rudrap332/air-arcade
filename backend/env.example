# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/adda_arcade_db"
DATABASE_TEST_URL="postgresql://username:password@localhost:5432/adda_arcade_test_db"

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# AWS Configuration (File Storage & CDN)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=adda-arcade-assets
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# Cloudinary Configuration (Image Processing)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Twilio Configuration (SMS Verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@addaarcade.com

# Gaming Server Configuration
GAMING_SERVER_URL=http://localhost:5001
GAMING_SERVER_SECRET=your_gaming_server_secret
MAX_SESSION_DURATION=7200
MAX_CONCURRENT_SESSIONS=100

# Streaming Configuration
STREAMING_QUALITY=1080p
MAX_FPS=144
ENABLE_4K=true
ENABLE_HDR=false

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-here

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONETIZATION=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARDS=true

# Third Party APIs
STEAM_API_KEY=your_steam_api_key_here
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# WebRTC Configuration
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVER=your_turn_server_url
WEBRTC_TURN_USERNAME=your_turn_username
WEBRTC_TURN_CREDENTIAL=your_turn_credential

# OpenAI Realtime
OPENAI_API_KEY=your_openai_api_key
